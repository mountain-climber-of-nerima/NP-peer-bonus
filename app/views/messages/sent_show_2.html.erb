<div class="main message-show-2">
  <div class="message-show-2-container">
    <div class="img_show_2_container">
      <img class="img_show_2" src="/10273_1.jpg">
      <div class="show-2-receive-user-name">
        <h3>TO：　<%= @message.receive_user_name %>さん</h3>
      </div>
      <div class="show-2-message-content">
        <p><%= @message.message_content %></p>
      </div>
      <div class="show-2-send-user-name">
        <% if @message.anonymous_flag == "on" %>
        <h3>FROM：　（匿名の方からのメッセージです）</h3>
        <% else %>
        <h3>FROM：　<%= @message.send_user_name %></h3>
        <% end %>
      </div>
    </div>
    <div class="message-menues">
      <div class="square_btn"><%= link_to("削除する", "/messages/#{@message.id}/destroy", {method:"post"}) %></div>
    </div>
  </div>
</div>
